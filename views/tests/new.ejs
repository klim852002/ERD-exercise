<h1>NEW TEST CREATION</h1>

<form method="post" action='/tests'>
<%# for creation of testid%>
  <div class="form-group">
    <label for="testid">Test ID</label>
    <input type="text" class="col-sm-10 control-label" id="testid" name = "newtest[testid]" placeholder="testid">
  </div>
<%# for creation of test type%>
  <div class="form-group">
    <%# <label for="testtype">Test Type</label>
    <input type="text" class="col-sm-2 control-label" id="testtype" name = "testtype[]" placeholder="test type">%>
    <label for="testtype">Test Type</label>
    <select name="newtest[testtype]">
      <option value="room1">Class 2 Practical</option>
      <option value="room2">Class 2 Theory</option>
      <option value="room3">Class 3 Practical</option>
      <option value="room4">Class 3 Theory</option>
      <option value="room3">Class 4 Practical</option>
      <option value="room4">Class 4 Theory</option>
    </select>
  </div>

  <%# for inputing enrollment numbers%>
  <div class="form-group">
    <label for="enrollment">Enrollment</label>
    <input type="number" name="enrollment[]" min="1" max="25">
  </div>

<%# for creation of venue%>
  <div class="form-group">
    <label for="venue">Venue</label>
    <select name="venue[]">
      <option value="room1">Room 1</option>
      <option value="room2">Room 2</option>
      <option value="room3">Room 3</option>
      <option value="room4">Room 4</option>
    </select>
  </div>
<%# for creation of tester%>
  <div class="form-group">
    <label for="tester" class="col-sm-2 control-label">Tester Name</label>
      <input type="text" class="form-control" id="tester" name = "tester[]" placeholder="tester">
  </div>

<%# for creation of test date%>
  <div class="form-group">
    <label for="testtime">Date of test:</label>
    <input type="date" name="testdate[]">
  </form>
<%# for creation of test time%>
  <div class="form-group">
    <label for="testtime">Time of test:</label>
    <input type="time" name="testtime[]">
  </form>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>

</form>
